    <script>
    function checkAll() {
    	var form = document.querySelector("#contactForm");
    	
		if (!checkName(form.querySelector("#name").value)) {
	        return false;
	    } else if (!checkMail(form.querySelector("#eId").value)) {
	        return false;
	    } else if (!checkPhone(form.querySelector("#phone").value)) {
	        return false;
	    } else if (!checkGender()) {
	        return false;
	    }
	    return true;
	}
    
	function checkExistData(value, dataName) {
	    if (value == "") {
	        window.alert(dataName + " 입력해주세요!");
	        return false;
	    }
	    return true;
	}
	
	function checkName(name) {
		if(!checkExistData(name,"본명을"))
			return false;
		var nameRegExp = /^[가-힣]{2,4}$/;
		if(!nameRegExp.test(name)) {
			window.alert("본명이 올바르지 않습니다.");
			return false;
		}
		return true;
	}
	
	function checkMail(mailId) {
		if(!checkExistData(mailId,"메일을"))
			return false;
		var mailRegExp = /^[a-zA-Z]/;
		if(!mailRegExp.test(mailId)) {
			window.alert("메일ID가 올바르지 않습니다.");
			return false;
		}
		return true;
	}
	
	function checkPhone(phone) {
		if(!checkExistData(phone,"전화번호를"))
			return false;
		var phoneRegExp = /^010-\d{4}-\d{4}$/;
		if(!phoneRegExp.test(phone)) {
			window.alert("전화번호 양식을 따라 기입해주세요!");
			return false;
		}
		return true;
	}
	
	function checkGender() {
		var checkedGender = document.getElementsByName("inlineRadioOptions");
		if(checkedGender[0].checked == true) {
			return true;
		}
		window.alert("성별을 체크해주세요!");
		return false;
	}
